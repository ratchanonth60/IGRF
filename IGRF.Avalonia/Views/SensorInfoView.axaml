<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IGRF.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IGRF.Avalonia.Views.SensorInfoView"
             x:DataType="vm:MainViewModel">
    
    <Grid Margin="25,15" RowDefinitions="Auto, *, Auto">
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="MFG Sensor Information" FontSize="22" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,20"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*, *, *" ColumnSpacing="15">
            
            <!-- Temperature Panel -->
            <Border Grid.Column="0" CornerRadius="12" Padding="20" Background="#1A1A1A" 
                    BorderBrush="#333333" BorderThickness="1">
                <StackPanel Spacing="15">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸŒ¡ï¸" FontSize="20"/>
                        <TextBlock Text="Temperature" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <Separator Background="#333333" Height="1"/>
                    
                    <!-- Sensor 1 Temp -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="SENSOR 1" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding SensorTemp1, StringFormat='{}{0:F1}'}" 
                                          FontSize="36" FontWeight="Bold" Foreground="#00BFFF"/>
                                <TextBlock Text="Â°C" FontSize="16" Foreground="#00BFFF99" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Electronics Temp -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="ELECTRONICS" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding ElectronicsTemp, StringFormat='{}{0:F1}'}" 
                                          FontSize="36" FontWeight="Bold" Foreground="#4A9EFF"/>
                                <TextBlock Text="Â°C" FontSize="16" Foreground="#4A9EFF99" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Sensor 2 Temp (Dual Only) -->
                    <Border CornerRadius="8" Padding="15" Background="#252525" 
                            IsVisible="{Binding IsDualSensor}">
                        <StackPanel>
                            <TextBlock Text="SENSOR 2" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding SensorTemp2, StringFormat='{}{0:F1}'}" 
                                          FontSize="36" FontWeight="Bold" Foreground="#7B68EE"/>
                                <TextBlock Text="Â°C" FontSize="16" Foreground="#7B68EE99" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- GPS Position Panel -->
            <Border Grid.Column="1" CornerRadius="12" Padding="20" Background="#1A1A1A" 
                    BorderBrush="#333333" BorderThickness="1">
                <StackPanel Spacing="15">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“" FontSize="20"/>
                        <TextBlock Text="GPS Position" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <Separator Background="#333333" Height="1"/>
                    
                    <!-- Latitude -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="LATITUDE" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding GpsLatitude, StringFormat='{}{0:F6}'}" 
                                          FontSize="28" FontWeight="Bold" Foreground="#00D9FF"/>
                                <TextBlock Text="Â°" FontSize="16" Foreground="#00D9FF99" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Longitude -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="LONGITUDE" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding GpsLongitude, StringFormat='{}{0:F6}'}" 
                                          FontSize="28" FontWeight="Bold" Foreground="#00D9FF"/>
                                <TextBlock Text="Â°" FontSize="16" Foreground="#00D9FF99" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- GPS Status -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel HorizontalAlignment="Center" Spacing="5">
                            <TextBlock Text="STATUS" Foreground="#666666" FontSize="10" LetterSpacing="1" HorizontalAlignment="Center"/>
                            <Border CornerRadius="15" Padding="15,6" Background="{Binding GpsStatusColor}">
                                <TextBlock Text="{Binding GpsStatus}" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Sensor Status Panel -->
            <Border Grid.Column="2" CornerRadius="12" Padding="20" Background="#1A1A1A" 
                    BorderBrush="#333333" BorderThickness="1">
                <StackPanel Spacing="15">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âš¡" FontSize="20"/>
                        <TextBlock Text="Sensor Status" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <Separator Background="#333333" Height="1"/>
                    
                    <!-- Status Word -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="STATUS WORD" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <TextBlock Text="{Binding StatusWord, StringFormat='0x{0:X8}'}" 
                                      FontSize="24" FontWeight="Bold" Foreground="#FFA500" FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Timestamp -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="LAST UPDATE" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <TextBlock Text="{Binding LastUpdateTime}" 
                                      FontSize="16" FontWeight="SemiBold" Foreground="#AAAAAA"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Data Rate -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="DATA RATE" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1}'}" 
                                          FontSize="28" FontWeight="Bold" Foreground="#00FF88"/>
                                <TextBlock Text="Hz" FontSize="14" Foreground="#00FF8899" 
                                          VerticalAlignment="Bottom" Margin="0,0,0,6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Packet Count -->
                    <Border CornerRadius="8" Padding="15" Background="#252525">
                        <StackPanel>
                            <TextBlock Text="PACKETS RECEIVED" Foreground="#666666" FontSize="10" LetterSpacing="1"/>
                            <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0}'}" 
                                      FontSize="24" FontWeight="Bold" Foreground="#CCCCCC"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer - Sensor Type -->
        <Border Grid.Row="2" CornerRadius="8" Padding="15,10" Margin="0,15,0,0" 
                Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="Connected Sensor:" Foreground="#666666" FontSize="13" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SelectedSensorType.Name}" FontSize="15" FontWeight="Bold" 
                          Foreground="#00BFFF" VerticalAlignment="Center"/>
                <Border Width="1" Height="20" Background="#333333"/>
                <TextBlock Text="Mode:" Foreground="#666666" FontSize="13" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SensorMode}" FontSize="15" FontWeight="Bold" 
                          Foreground="#4A9EFF" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
